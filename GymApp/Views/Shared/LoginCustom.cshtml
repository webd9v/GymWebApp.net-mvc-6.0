@inject SignInManager<IdentityUser> signInManager;

<ul class="navbar-nav ml-auto">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form method="post" asp-controller="Account" asp-action="logout"><!--User method post instead of get to avoid malicious users from setting url links to logout the user-->
                <button type="submit" class="nav-link btn btn-link py-0 text-light" style="width:auto;">
                    Logout @User.Identity.Name
                </button>
            </form>
        </li>
    }else{
    <li class="nav-item">
        <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Login</a>
    </li>
    }
</ul>
